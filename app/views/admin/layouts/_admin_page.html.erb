<% if logged_in? %>
  <header class="float-right">
    <nav class="navbar navbar-light bg-white shadow-sm">
      <div class="navbar-collapse">
        <ul class="nav justify-content-end px-5">
          <li class="nav-item dropdown">
            <%= link_to "#", class: "dropdown-toggle nav-link h4", "role": "button", "data-toggle": "dropdown", "aria-expanded": "false" do %>
              <%= current_user.name %>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".log_out"), logout_path, method: :delete, class: "dropdown-item" %></li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>
  </header>

  <div class="sidebar bg-primary shadow">
    <ul class="nav flex-column">
      <li class="shadow-sm">
        <%= link_to t("app_name"), admin_root_path, class: "nav-link logo text-white h1" %>
      </li>
      <li class="nav-item">
        <%= link_to t(".home"), admin_root_path, class: "nav-link h4 bg-primary text-white" %>
      </li>
      <li class="nav-item">
        <%= link_to t(".category"), "#", class: "nav-link h4 bg-primary text-white" %>
      </li>
      <li class="nav-item">
        <%= link_to t(".product"), admin_products_path, class: "nav-link h4 bg-primary text-white" %>
      </li>
      <li class="nav-item">
        <%= link_to t(".user"), "#", class: "nav-link h4 bg-primary text-white" %>
      </li>
    </ul>
  </div>

  <div class="content">
    <div class="container-fluid">
      <div class="row mt-4 mb-3 mx-4">
        <div class="col-md-12">
          <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>" role="alert"><%= message %></div>
          <% end %>
        </div>
      </div>
      <%= yield %>
    </div>
  </div>
<% else %>
  <%= render "sessions/login_page" %>
<% end %>
